<h1> Change Password</h1>

<%= form_with model: Current.user, url: change_password_path do |form| %>
<% if form.object.errors.any? %>
<div class="alert alert-danger">
<% form.object.errors.full_messages.each do |m| %>
<div><%= m %></div>
<% end %>
</div>
<% end %>

<div class>
<div class="mb-3">
<%= form.label :password, "Password" %>
<%= form.password_field :password, class:"form-control", placeholder:"type your password here" %>
</div>
<div class="mb-3">
<%= form.label :password_confirmation, "Confirm your Password" %>
<%= form.password_field :password_confirmation, class:"form-control" %>
</div>
<div class="mb-3">
<%= form.submit "Update Password" %>
</div>
<% end %>
