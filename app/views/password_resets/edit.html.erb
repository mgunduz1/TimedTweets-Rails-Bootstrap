<h1> Reset Your Password </h1>


<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |f| %>

<% if f.object.errors.any? %>
<div class="alert alert-danger">
<% f.object.errors.full_messages.each do |m| %>
<div><%= m %></div>
<% end %>
</div>
<% end %>

<div class="mb-3">
<%= f.label :password, "Password" %>
<%= f.password_field :password, class:"form-control", placeholder:"type your password here" %>
</div>
<div class="mb-3">
<%= f.label :password_confirmation, "Confirm your Password" %>
<%= f.password_field :password_confirmation, class:"form-control" %>
</div>

<div class="mb-3">
<%= f.submit "Reset my Password" %>
</div>

<% end %>
